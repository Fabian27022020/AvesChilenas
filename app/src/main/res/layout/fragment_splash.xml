<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_fragment_final"
    >


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bienvenidos_a_la_App_de_Aves_Chilenas"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="#070707"
        android:gravity="clip_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ir_a_lista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="@string/ir_a_lista_de_aves"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/tv_bienvenida"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_bienvenida"
        app:layout_constraintTop_toBottomOf="@+id/tv_bienvenida" />

</androidx.constraintlayout.widget.ConstraintLayout>