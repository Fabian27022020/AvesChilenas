<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_cargando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:minWidth="150dp"
            android:minHeight="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nombre_espanol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/nombre_en_espanol"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_en_ingles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/nombre_en_ingles"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombre_espanol" />

            <TextView
                android:id="@+id/tv_nombre_en_ingles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_en_ingles"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_name_en_ingles"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_en_ingles" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_latin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="@string/nombre_en_latin"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombre_espanol" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nombre_en_latin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_en_latin"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_name_latin"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_latin" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_imagen_ave"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.534"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombre_en_latin" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_descripcions"
                app:layout_constraintTop_toBottomOf="@+id/tv_descripcions" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_descripcions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_habitat"
                app:layout_constraintTop_toBottomOf="@+id/iv_imagen_ave" />


            <TextView
                android:id="@+id/tv_habitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/habitat"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_habitad"
                app:layout_constraintTop_toBottomOf="@+id/tv_descripcion" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_habitad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/habitad"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_habitat" />

            <TextView
                android:id="@+id/tv_sabias_que"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/sabias_qu"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/tv_habitad"
                app:layout_constraintTop_toBottomOf="@+id/tv_habitad" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_didyouknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/didyouknow"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_sabias_que"
                app:layout_constraintTop_toBottomOf="@+id/tv_sabias_que" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:text="@string/size"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_didyouknow" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_species"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:text="@string/species"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_fotoMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_species" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:text="@string/title"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_fotoMapa" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sonido_ave"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button"
                android:text="@string/escuchar_canto_del_ave"
                android:textAllCaps="false"
                android:textColor="#FDFDFD"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</ScrollView>